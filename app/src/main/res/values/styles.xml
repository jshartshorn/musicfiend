<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/musicfiendPrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/musicfiendSecondaryBackgroundColor</item>
        <item name="colorAccent">@color/musicfiendColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/musicfiendBackgroundColor</item>
    </style>

    <style name="Theme.MusicFiend" parent="Theme.Base"/>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/musicfiendPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/musicfiendBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/musicfiendPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/musicfiendPrimaryTextColor</item>
        <item name="android:background">@color/musicfiendPrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/musicfiendPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded</item>
    </style>

</resources>